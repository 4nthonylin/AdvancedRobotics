<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Portal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stugov_logo2" />

    <Button
        android:id="@+id/bCheckout"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bCheckin"
        android:layout_alignBottom="@+id/bCheckin"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/userText"
        android:background="@color/loginButtonC"
        android:onClick="checkout"
        android:text="CheckOut"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="@string/placeHolder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/bCheckin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/userText"
        android:background="@color/loginButtonC"
        android:onClick="checkin"
        android:text="CheckIn"
        android:textSize="30sp" />

</RelativeLayout>
